VendorID: 051d
ProductID: 0002

apt install nut

#Configurations: /etc/nut/

vi /etc/nut/ups.conf

[<UPSNAME>]
driver = <DRIVERNAME>
desc = "<MODEL NAME>"
port = auto
vendorid = <VENDORID>
productid = <PRODUCTID>

<DRIVERNAME> â€“ Replace this block with the name of the driver your UPS expects.

# Test:
upsdrvctl start

###Enable NUT to Be Accessible Outside your Raspberry Pi
vi /etc/nut/upsd.conf

LISTEN 0.0.0.0 3493

### Setting up a NUT User
vi /etc/nut/upsd.users


[admin]
        password = adminpass
        actions = SET
        instcmds = ALL
[upsmon_local]
        password  = pass4upsuser
        upsmon master
[upsmon_remote]
        password  = pass4upsuser
        upsmon slave
[monuser]				#This is what Synology DSM expects
        password  = secret   #Leave this here.
        upsmon slave


### Enable MONITOR:

vi /etc/nut/upsmon.conf
MONITOR apc@localhost 1 upsmon_local pass4upsuser master


vi /etc/nut/nut.conf
MODE=netserver


# Verify the configuration:
service nut-server status
service nut-client status

service nut-server start
service nut-client start


# TEST Konfiguration
 upsc apc

